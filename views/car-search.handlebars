<body>
  <header class="bg-gray-600">
  <h1 class="text-3xl p-3 text-white">Car Search</h1>
</header>

<div class="grid place-items-center">
  <div id="search-menu" class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 p-3">
    <div id="make-menu" class="rounded bg-gray-300 p-3">
      <label for="make">Choose a make:</label>
      <select name="make" id="make" class="form-select 
          block w-full px-3 py-1.5 text-base font-normal text-gray-700
          bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
          rounded transition ease-in-out m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none">
        <option value="All">All</option>
        <option value="Acura">Acura</option>
        <option value="Audi">Audi</option>
        <option value="BMW">BMW</option>
        <option value="Buick">Buick</option>
        <option value="Cadillac">Cadillac</option>
        <option value="Chevrolet">Chevrolet</option>
        <option value="Chrysler">Chrysler</option>
        <option value="Dodge">Dodge</option>
        <option value="Ford">Ford</option>
        <option value="GMC">GMC</option>
        <option value="Honda">Honda</option>
        <option value="Hyundai">Hyundai</option>
        <option value="Infiniti">Infiniti</option>
        <option value="Jaguar">Jaguar</option>
        <option value="Jeep">Jeep</option>
        <option value="Kia">Kia</option>
        <option value="Land Rover">Land Rover</option>
        <option value="Lexus">Lexus</option>
        <option value="Lincoln">Lincoln</option>
        <option value="Mazda">Mazda</option>
        <option value="Mercedes">Mercedes</option>
        <option value="Mitsubishi">Mitsubishi</option>
        <option value="Nissan">Nissan</option>
        <option value="Porsche">Porsche</option>
        <option value="Ram">Ram</option>
        <option value="Subaru">Subaru</option>
        <option value="Tesla">Tesla</option>
        <option value="Toyota">Toyota</option>
        <option value="Volkswagen">Volkswagen</option>
        <option value="Volvo">Volvo</option>
        <option value="Other">Other</option>
      </select>
    </div>
    <div id="mileages" class="rounded bg-gray-300 p-3">
      <label for="mileage">Choose a mileage range:</label>
      <select name="mileage" id="mileage" class="form-select 
          block w-full px-3 py-1.5 text-base font-normal text-gray-700
          bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
          rounded transition ease-in-out m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none">
        <option value="5000000">Any</option>
        <option value="50000">Less than 50,000k</option>
        <option value="60000">50,000 to 60,000k</option>
        <option value="70000">60,000 to 70,000k</option>
        <option value="80000">70,000 to 80,000k</option>
        <option value="90000">80,000 to 90,000k</option>
        <option value="100000">90,000 to 100,000k</option>
        <option value="100,001">Greater than 100,000k</option>
      </select>
    </div>
    <div id="prices" class="rounded bg-gray-300 p-3">
      <label for="price">Choose a price range:</label>
      <select name="price" id="price" class="form-select 
          block w-full px-3 py-1.5 text-base font-normal text-gray-700
          bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
          rounded transition ease-in-out m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none">
        <option value="5000000">Any</option>
        <option value="5000">Less than $5,000</option>
        <option value="10000">$5,000 to $10,000</option>
        <option value="15000">$10,000 to $15,000</option>
        <option value="20000">$15,000 to $20,000</option>
        <option value="25000">$20,000 to $25,000</option>
        <option value="30000">$25,000 to $30,000</option>
        <option value="35000">$30,000 to $35,000</option>
        <option value="40000">$35,000 to $40,000</option>
        <option value="50000">Greater than $50,000</option>
      </select>
    </div>
    {{!-- <div id="bodys" class="rounded bg-gray-300 p-3">
      <label for="body">Choose a body style:</label>
      <select name="body" id="body" class="form-select 
          block w-full px-3 py-1.5 text-base font-normal text-gray-700
          bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
          rounded transition ease-in-out m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none">
        <option value="Any">Any</option>
        <option value="Cargo Van">Cargo Van</option>
        <option value="Convertible">Convertible</option>
        <option value="Coupe">Coupe</option>
        <option value="Hatchback">Hatchback</option>
        <option value="Minivan">Minivan</option>
        <option value="Passenger Van">Passenger Van</option>
        <option value="Pickup Truck">Pickup Truck</option>
        <option value="SUV">SUV</option>
        <option value="Sedan">Sedan</option>
        <option value="Wagon">Wagon</option>
      </select>
    </div> --}}
    <button id="search-submit" type="submit"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
  </div>
</div>

<div id="car-display" class="grid grid-cols-1 md:grid-cols-2">
  {{each}}
  {{!--car card code here, handlebars will render --}}
  <div class="max-w-md m-2 rounded overflow-hidden shadow-lg">
    <img class="w-auto" src="./img/car-placeholder.jpg" alt="Car Placeholder Image">
    <div class="px-6 py-4">
      <div id="car-title" class="font-bold text-xl mb-2">
        <h2>{{this.username}}'s {{this.Make}} {{this.Model}}></h2>
        <button id="save-car" type="button"
          class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Save</button>
      </div>
      <div class="px-6 pt-4 pb-2">
        <span id="year"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Year:
          {{this.Year}}</span>
        <span id="make"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Make:
          {{this.Make}}</span>
        <span id="model"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Model:
          {{this.Model}}</span>
        <span id="series"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Series:
          {{this.Series}}</span>
        <span id="color"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Exterior
          Color: {{this.Color}}</span>
        <span id="mileage"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Mileage:
          {{this.Mileage}}</span>
        <span id="price"
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Price:
          {{this.Price}}</span>
      </div>
      <div class="px-6 pt-4 pb-2">
        <p id="description" class="text-gray-700 text-base">{{this.Description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

    <div id="car-display" class="grid grid-cols-1 md:grid-cols-2"></div>
</body>

